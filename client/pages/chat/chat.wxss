.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 0;
  background-color: #ededed;
}

.login-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
}

.login-card {
  background-color: white;
  width: 600rpx;
  padding: 40rpx;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.login-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
}

.avatar-wrapper {
  padding: 0;
  width: 160rpx !important;
  height: 160rpx !important;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  background-color: #f0f0f0;
}

.avatar-preview {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.nickname-input {
  width: 100%;
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
  padding: 0 20rpx;
  margin-bottom: 40rpx;
  box-sizing: border-box;
  text-align: center;
}

.login-btn {
  background-color: #07c160;
  color: white;
  width: 100% !important;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 10rpx;
  font-size: 32rpx;
  padding: 0;
}

.chat-area {
  flex: 1;
  padding: 20rpx;
  box-sizing: border-box;
  overflow-y: auto;
}

.system-message {
  text-align: center;
  margin: 20rpx 0;
}

.system-message text {
  background-color: #dadada;
  color: white;
  padding: 5rpx 15rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.message-item {
  margin-bottom: 30rpx;
  display: flex;
  align-items: flex-start;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;
  flex-shrink: 0;
}

.content-wrapper {
  display: flex;
  flex-direction: column;
  max-width: 70%;
  margin: 0 20rpx;
}

.nickname {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 6rpx;
}

.message-bubble {
  background-color: white;
  padding: 20rpx;
  border-radius: 10rpx;
  position: relative;
  word-wrap: break-word;
}

.message-text {
  font-size: 30rpx;
  color: #333;
}

/* My Message (Right) */
.my-message {
  flex-direction: row-reverse;
}

.my-message .nickname {
  text-align: right;
}

.my-message .message-bubble {
  background-color: #95ec69;
}

/* Other Message (Left) */
.other-message {
  flex-direction: row;
}

.input-area {
  height: 100rpx;
  background-color: #f7f7f7;
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  border-top: 1px solid #dcdcdc;
}

.input {
  flex: 1;
  height: 72rpx;
  background-color: white;
  border-radius: 10rpx;
  padding: 0 20rpx;
  margin-right: 20rpx;
}

.send-btn {
  width: 120rpx;
  height: 72rpx;
  line-height: 72rpx;
  font-size: 28rpx;
  background-color: #07c160;
  color: white;
  padding: 0;
  border-radius: 10rpx;
}
